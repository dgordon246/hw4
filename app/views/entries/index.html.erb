<h1>Entries</h1>

<p><%= link_to "Create New Entry", "/entries/new", class: "btn btn-primary" %></p>

<% if @entries.any? %>
  <% @entries.each do |entry| %>
    <div class="card mb-3">
      <div class="card-body">
        <p><strong><%= entry.title %></strong></p>
        <p><%= entry.description %></p>
        <p>Occurred on: <%= entry.occurred_on %></p>
        <% if entry.uploaded_image.attached? %>
          <%= image_tag entry.uploaded_image, class: "img-fluid" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>No entries yet. Be the first to post!</p>
<% end %>
