<h1>Entries</h1>

<p><%= link_to "Create New Entry", "/entries/new", class: "btn btn-primary" %></p>

<% if @entries.present? && @entries.any? %> <!-- Prevent nil errors -->
  <% @entries.each do |entry| %>
    <div class="card mb-3">
      <div class="card-body">
        <p><strong><%= entry.user.email %></strong> 
          <% if entry.place.present? %>
            at <%= entry.place.name %>
          <% else %>
            (No location)
          <% end %>
        </p>
        <p><%= entry.body %></p>
        <% if entry.uploaded_image.attached? %>
          <%= image_tag entry.uploaded_image, class: "img-fluid" %>
        <% end %>
        <p class="text-muted"><%= entry.created_at.strftime("%b %d, %Y %l:%M %p") %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <p>No entries yet. Be the first to post!</p>
<% end %>
