<p><%= link_to "Create New Entry", "/entries/new", { class: "btn btn-primary" } %></p> <!-- âœ… Class Hash Syntax -->

<% if @entries.length > 0 %>
  <% @entries.each do |entry| %>
    <div class="card mb-3">
      <div class="card-body">
        <h3><%= entry.title %></h3>
        <p><%= entry.occurred_on %></p>
        <% if entry.uploaded_image.attached? %>
          <%= image_tag entry.uploaded_image, { class: "img-fluid" } %> 
        <% end %>
        <p><%= entry.description %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <p>No entries yet. Click "Create New Entry" to add one!</p>
<% end %>
