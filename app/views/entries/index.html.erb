<h1>Entries</h1>

<% if @entries.any? %> <!-- Prevent errors if no entries exist -->
  <% @entries.each do |entry| %>
    <div class="card mb-3">
      <div class="card-body">
        <p><strong><%= entry.user.email %></strong> at <%= entry.place.name %></p> <!-- Show user and place -->
        <p><%= entry.body %></p>
        <% if entry.uploaded_image.attached? %>
          <%= image_tag entry.uploaded_image, class: "img-fluid" %>
        <% end %>
        <p class="text-muted"><%= entry.created_at.strftime("%b %d, %Y %l:%M %p") %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <p>No entries yet. Be the first to post!</p>
<% end %>
